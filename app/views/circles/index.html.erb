<br>
<div class="row">
  <div class="medium-12 columns">
    <div id="container" class="js-masonry" data-masonry-options='{ "itemSelector": ".item" }'>
      <div class="row">
        <% @circles.each do |circle| %>
        <div class="small-9 medium-4 large-3 columns item">
          <div class="animation">
            <a href="/circles/<%=circle.id%>">
              <div class="panel-body">
                <% if circle.is_private == true %>
                <div class="card">
                  <div class="container">
                    <div class="front">
                      <%= image_tag "private.jpg" %>
                    </div>
                    <div class="back">
                      <a href="/circles/<%=circle.id%>">
                        <h4><%=circle.title.capitalize%></h4>
                        <h5>by: <%=circle.user.display_name%></h5>
                        <p>description: <%=circle.description%></p>
                      </div>
                    </div>
                  </div>
                <% else %>
                  <% if circle.pictures == [] %>
                  <div class="card">
                    <div class="container">
                      <div class="front">
                        <%= image_tag "nophoto.jpg" %>
                      </div>
                      <div class="back">
                        <a href="/circles/<%=circle.id%>">
                          <h4><%=circle.title.capitalize%></h4>
                          <h5>by: <%=circle.user.display_name%></h5>
                          <p>description: <%=circle.description%></p>
                        </div>
                      </div>
                    </div>
                  <% else %>
                  <div class="card">
                    <div class="container">
                      <div class="front">
                        <img src=<%="#{circle.pictures.first.image}" %>></a>
                      </div>
                      <div class="back">
                        <a href="/circles/<%=circle.id%>">
                          <h4><%=circle.title.capitalize%></h4>
                          <h5>by: <%=circle.user.display_name%></h5>
                        <p>description: <%=circle.description%></p>
                      </div>
                    </div>
                  </div>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
