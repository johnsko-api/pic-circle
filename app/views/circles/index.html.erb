<div class="row">
  <h1>Circles</h1>
  <hr>
  <div class="medium-12 columns">
    <div id="container" class="js-masonry" data-masonry-options='{ "itemSelector": ".item" }'>
      <div class="row">
        <% @circles.each do |circle| %>
        <div class="small-12 medium-6 large-4 columns item">


          <div class="crop">
            <a href="/circles/<%=circle.id%>">
              <% if circle.is_private == true %>
                <img src=<%="http://static.guim.co.uk/sys-images/Guardian/Pix/pictures/2010/8/25/1282747751685/Top-secret-stamp-006.jpg" %>></a>
              <% else %>
                <% if circle.pictures == [] %>
                  <img src=<%="http://texcoms.com/wp-content/uploads/2014/12/nophoto.gif9_2.jpg" %>></a>
                <% else %>
                  <img src=<%="#{circle.pictures.first.image}" %>></a>
                <% end %>
              <% end %>
          </div>

        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
