<% if @circle.is_private == false %>
  <%= @circle.title %>
  <%= @circle.description %>

  <%= link_to "Edit", edit_circle_path %>
  <%= link_to "Delete", circle_path(@circle), method: :delete %>

  <%= render "submit_picture_form" %>
  <%= render "view_pictures" %>
  <%= render "chatbox" %>
  <%= render "create_comments_form" %>
<% else %>
  <% if (current_user.id == @circle.user_id)%>
    <%= @circle.title %>
    <%= @circle.description %>
    <%= link_to "Pending", pending_path %>

    <%= link_to "Edit", edit_circle_path %>
    <%= link_to "Delete", circle_path(@circle), method: :delete %>

    <%= render "submit_picture_form" %>
    <%= render "view_pictures" %>
    <%= render "chatbox" %>
    <%= render "create_comments_form" %>
  <% elsif @member.include?(@approved_member) %>
    <%= @circle.title %>
    <%= @circle.description %>

    <%= render "submit_picture_form" %>
    <%= render "view_pictures" %>
    <%= render "chatbox" %>
    <%= render "create_comments_form" %>
  <% else %>
    <%= @circle.title %>
    <%= @circle.description %>
    <%= link_to "Join Group", circle_memberships_path(@circle), method: :post %>
  <% end %>
<% end %>
